<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="remove_login_brand_promotion" inherit_id="web.brand_promotion_message" priority="1000">
        <xpath expr="." position="replace">
            <div/>
        </xpath>
    </template>

    <template id="remove_db_manager" inherit_id="web.login_layout" priority="1000">
        <xpath expr="//a[contains(@href, '/web/database/manager')]" position="replace"/>
        <xpath expr="//*[contains(@class, 'o_database') or contains(@class, 'database')]" position="attributes">
            <attribute name="style" add="display:none !important;" separator=";"/>
        </xpath>
    </template>

    <template id="remove_company_logo" inherit_id="web.login_layout" priority="1000">
        <xpath expr="//div[contains(@class, 'text-center')]//img | //header//img | //img[contains(@class, 'o_login_logo')]" position="replace"/>
    </template>
</odoo>
