<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_ypu_teacher_list" model="ir.ui.view">
        <field name="name">ypu.teacher.list</field>
        <field name="model">ypu.teacher</field>
        <field name="arch" type="xml">
            <list>
                <field name="image_1920" widget="image" options="{'size': [32, 32]}"/>
                <field name="name"/>
                <field name="department"/>
                <field name="subject"/>
                <field name="rank"/>
                <field name="category_id"/>
                <field name="position_id"/>
                <field name="years_of_experience"/>
                <field name="research_gate"/>
                <field name="available"/>
                <field name="website_published"/>
                <field name="show_link_button"/>
                <field name="link_url"/>
                <field name="is_public"/>
                <field name="is_dean"/>
            </list>
        </field>
    </record>

    <record id="view_ypu_teacher_form" model="ir.ui.view">
        <field name="name">ypu.teacher.form</field>
        <field name="model">ypu.teacher</field>
        <field name="arch" type="xml">
            <form string="Teacher">
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="department"/>
                            <field name="subject"/>
                            <field name="rank"/>
                            <field name="category_id"/>
                            <field name="position_id"/>
                            <field name="years_of_experience"/>
                            <field name="research_gate"/>
                            <field name="available"/>
                            <field name="website_published"/>
                            <field name="show_link_button"/>
                            <field name="link_url" invisible="not show_link_button"/>
                            <field name="is_public"/>
                            <field name="is_dean"/>
                        </group>
                        <group>
                            <field name="image_1920" widget="image" class="oe_avatar" options="{'size': [180, 180]}"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Profile">
                            <field name="bio" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ypu_teacher" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">ypu.teacher</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_ypu_root" name="YP Teachers" sequence="10" />
    <menuitem id="menu_ypu_teacher_root" name="Teachers" parent="menu_ypu_root" action="action_ypu_teacher" sequence="10"/>
    <menuitem id="menu_ypu_teacher_category" name="Categories" parent="menu_ypu_root" action="action_ypu_teacher_category" sequence="20"/>
</odoo>
