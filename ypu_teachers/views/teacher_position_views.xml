<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_ypu_teacher_position_list" model="ir.ui.view">
        <field name="name">ypu.teacher.position.list</field>
        <field name="model">ypu.teacher.position</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_ypu_teacher_position_form" model="ir.ui.view">
        <field name="name">ypu.teacher.position.form</field>
        <field name="model">ypu.teacher.position</field>
        <field name="arch" type="xml">
            <form string="Position">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ypu_teacher_position" model="ir.actions.act_window">
        <field name="name">Positions</field>
        <field name="res_model">ypu.teacher.position</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_ypu_teacher_position" name="Positions" parent="menu_ypu_root" action="action_ypu_teacher_position" sequence="15"/>
</odoo>
