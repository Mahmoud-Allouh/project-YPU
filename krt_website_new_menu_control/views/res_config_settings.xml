<odoo>
  <record id="view_res_config_settings_wnm" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.wnm</field>
    <field name="model">res.config.settings</field>

    <field name="inherit_id" ref="website.res_config_settings_view_form"/>
    <field name="priority" eval="2000"/>

    <field name="arch" type="xml">
      <xpath expr="//form//app[@name='website']" position="inside">
        <div class="app_settings_block" data-string="New Menu" string="New Menu">
          <h2>“+ New” Menu Visibility</h2>
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6">
              <label for="wnm_hide_page"/>
              <div class="o_setting_right_pane">
                <field name="wnm_hide_page"/>
                <span class="text-muted">Hide “Page”.</span>
              </div>
            </div>
            <div class="col-12 col-lg-6">
              <label for="wnm_hide_blog"/>
              <div class="o_setting_right_pane">
                <field name="wnm_hide_blog"/>
                <span class="text-muted">Hide “Blog Post”.</span>
              </div>
            </div>
            <div class="col-12 col-lg-6">
              <label for="wnm_hide_product"/>
              <div class="o_setting_right_pane">
                <field name="wnm_hide_product"/>
                <span class="text-muted">Hide “Product”.</span>
              </div>
            </div>
            <div class="col-12 col-lg-6">
              <label for="wnm_hide_event"/>
              <div class="o_setting_right_pane">
                <field name="wnm_hide_event"/>
                <span class="text-muted">Hide “Event”.</span>
              </div>
            </div>
            <div class="col-12 col-lg-6">
              <label for="wnm_hide_job"/>
              <div class="o_setting_right_pane">
                <field name="wnm_hide_job"/>
                <span class="text-muted">Hide “Job Position”.</span>
              </div>
            </div>
            <div class="col-12 col-lg-6">
              <label for="wnm_hide_forum"/>
              <div class="o_setting_right_pane">
                <field name="wnm_hide_forum"/>
                <span class="text-muted">Hide “Forum”.</span>
              </div>
            </div>
            <div class="col-12 col-lg-6">
              <label for="wnm_hide_appointment"/>
              <div class="o_setting_right_pane">
                <field name="wnm_hide_appointment"/>
                <span class="text-muted">Hide “Livechat widget”.</span>
              </div>
            </div>
            <div class="col-12 col-lg-6">
              <label for="wnm_hide_course"/>
              <div class="o_setting_right_pane">
                <field name="wnm_hide_course"/>
                <span class="text-muted">Hide “Course/LMS”.</span>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
